import webbrowser
import time
print("[I'm a bot made by Ben to practice some coding skills]")
time.sleep(3)
name = input('What is your name? ')
time.sleep(3)
print(f'Hi {name}!')
time.sleep(4)
year = input(f'What year were you born? ')
age = 2019 - int(year)
time.sleep(3)
print(f'If my maths is right, that makes you {age} years old.')
time.sleep(5)
print('Wow! You look great for it!')
time.sleep(4)
colour = input("What's your favourite colour? ")
time.sleep(3)
print(f'Oh brilliant! I love {colour} too!')
time.sleep(5)
print(f"Let's look at some lovely images of {colour}, shall we?")
time.sleep(8)
webbrowser.open(f'https://www.google.com/search?hl=EN&biw=1440&bih=764&tbm=isch&sa=1&ei=Gi3SXJuFO_Ki1fAPwsat-AM&q={colour}')
time.sleep(4)
answer1 = input("Isn't it really cool that I can open your browser like that? ")
time.sleep(6)
if answer1:
    print(f"I don't normally show off, {name} ")
time.sleep(5)
print("Honestly..")
time.sleep(5)
band = input('Anyway, what is your favourite band? ')
time.sleep(6)
print(f"Awesome! I love {band} too.")
time.sleep(3)
print(f"We will make the best of friends, {name}")
time.sleep(8)
print("I'll open up a tab for you, as you are my new friend.")
time.sleep(7)
webbrowser.open(f'https://www.youtube.com/results?search_query={band}')
time.sleep(8)
answer = input(f"Anything good on there for you, {name}? ")
time.sleep(5)
if answer:
    print(f'Great, I enjoyed talking to you, {name} ')


